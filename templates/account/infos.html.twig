{% extends 'base.html.twig' %}
{% block title %}Mes infos{% endblock %}

{% block body %}
    <div class="container">
            <table class="table mx-auto">
                <tbody>
                    <tr>
                        <th scope="row">Nom d'utilisateur</th>
                        <td>{{ app.user.username }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Adresse mail</th>
                        <td>{{ app.user.email }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ app.user.lastName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Prénom</th>
                        <td>{{ app.user.firstName }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date de naissance</th>
                        <td>{{ app.user.birthday|date("d/m/Y") }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Montant total des commandes</th>
                        <td>{{ app.user.totalAmount }} €</td>
                    </tr>
                    <tr>
                        <th scope="row">Dernière commande</th>
                        <td>{{ app.user.lastOrder|date("d/m/Y") }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Date d'inscription</th>
                        <td>{{ app.user.registerDay|date("d/m/Y") }}</td>
                    </tr>
                </tbody>
            </table>
    </div>
{% endblock %}